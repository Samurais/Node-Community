extend layout
block content
    h1(class='singup-title') #{lingua.login.reset.title}
    if (error)
        div(class='alert alert-danger') #{error}
    if (reset)
        div(class='alert alert-success') #{reset}
    else
        div(class='login-form col-sm-4')
            form(class='form-horizontal',role='form',method='post')
                div(class='form-group')
                    label(class='col-sm-3 control-label',for='password') #{lingua.install.information.form.password}
                    div(class='col-sm-8')
                        input(type='password',class='form-control',id='password',name='password',value=form.password)
                div(class='form-group')
                    label(class='col-sm-3 control-label')
                    div(class='col-sm-8')
                        button(type='submit', class='btn btn-success') #{lingua.login.reset.button}
            script(type='text/javascript').
                $('#password').focus();