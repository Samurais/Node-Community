doctype
html
    head
        meta( charset='utf-8' )
        link( type='image/x-icon', rel='icon', href='/favicon.ico' )
        link( type='image/x-icon', rel='shortcut icon', href='/favicon.ico' )
        title #{title}
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/template.css')
        script( src='/js/jquery.min.js' ).
        script( src='/js/bootstrap.min.js' ).
        script( src='/js/main.js' ).
        script( src='/socket.io/socket.io.js').
        script( src='/js/epiceditor.min.js').
        script( src='/socket.io/socket.io.js').
        script.
            var websocket = io.connect(document.location.protocol+'//'+document.location.host);
            $(document).on("ready", open_websocket);
            function open_websocket()
                {
                websocket.on("wsGet", socket.get);
                }

            $('.dropdown-toggle').dropdown();
    body
        header
            div(class='container')
                div(class='header-left')
                    a(class='logo',href='/')
                    a(class='page',id='blog',href='/blog') #{lingua.header.main.pages.blog}
                    a(class='page',id='questions',href='/questions') #{lingua.header.main.pages.questions}
                    a(class='page',id='training',href='/training') #{lingua.header.main.pages.training}
                div(class='header-right')
                    if( user )
                        div(class='btn-group')
                            a(href='JavaScript:void(0);',class='dropdown-toggle',data-toggle='dropdown',id='profile')
                                img(src='#{user.avatar}?s=30',class='img-circle')
                                | &nbsp; #{user.name} &nbsp;
                                span(class='caret')
                            ul(class='dropdown-menu',role='menu')
                                li
                                    a(href='/user/#{user.username}')
                                        span(class='glyphicon glyphicon-user')
                                        | #{lingua.header.main.pages.profile}
                                li
                                    a(href='/user/#{user.username}/settings')
                                        span(class='glyphicon glyphicon-cog')
                                        | #{lingua.header.main.pages.settings}
                                li
                                    a(href='/user/logout')
                                        span(class='glyphicon glyphicon-log-out')
                                        | #{lingua.header.main.pages.logout}
                    else
                        a(href='/user/login',id='login')
                            span(class='glyphicon glyphicon-log-in')
                            | #{lingua.header.main.pages.sign_in}
                        a(class='login',id='register',href='/user/register')
                            span(class='glyphicon glyphicon-user')
                            | #{lingua.header.main.pages.create_an_account}
        div(id='maia-main',class='container')
            block content
    include footer